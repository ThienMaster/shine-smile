.menu
  .menu-mobile
    input.menu-checkbox(type="checkbox", name="menu-checkbox" id="menu-checkbox" hidden)
    label(for="menu-checkbox")
      svg.menu-header-icon(xmlns="http://www.w3.org/2000/svg", height="16", width= "14", viewBox="0 0 448 512")
        path(d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z" fill="currentColor")
    //- Overlay
    label.menu-overlay(for="menu-checkbox")
    //- Menu content
    .menu-drawer
      .menu-drawer-top
        //- Logo
        a.logo(href="./")
          img(src="./image/Logo.svg", alt="Logo Shine Smile")
        //- Icon close menu
        label(for="menu-checkbox")
          svg.close-menu(xmlns="http://www.w3.org/2000/svg", height="16", width= "16", viewBox="0 0 384 512")
            path(d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z" fill="currentColor")
      //- navigation mobile
      ul#header-menu-mobile
      //- Dùng JS để copy navigation
      script.
        const navPC = document.querySelector("#header-menu-pc");
        const navMobile = document.querySelector("#header-menu-mobile");
        // Sao chép
        navMobile.innerHTML = navPC.innerHTML;

      .separate
      .show-on-mobile
        each title in ["Log In", "Sign Up"]
          a.header-menu-link(href="#!")= title
