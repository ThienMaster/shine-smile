header.header
  .container.header-container
    .header-top
      a.logo.header-logo(href="./")
        img(src="./image/Logo.svg", alt="Logo Shine Smile")
      ul.header-menu#header-menu-pc
        each menu in [{href: "/", title: "Home"}, {href: "#!", title: "Services"}, {href: "#!", title: "About"}, {href: "#!", title: "Doctors"}]
          li.header-menu-item
            a.header-menu-link(href= menu.href)= menu.title
      .header-btn
        a.button-login(href="#!") Log In
        a.button.button-signup(href="#!") Sign Up

    .hero
      .hero-content
        h1.heading.hero-heading Exceptional dental care for all ages.
        p.caption.hero-caption Exceptional dental care for all ages. Your great smile begins with a great dentist.
        .hero-links
          a.button.hero-button(href="#!") Book Online
          a(href="#!")
            span or call (123) 456-7890
      .hero-image
        img.hero-image-big(src="./image/hero/hero-1.png", alt="Image Hero")
        img.hero-image-small(src="./image/hero/hero-2.png", alt="Image Hero")